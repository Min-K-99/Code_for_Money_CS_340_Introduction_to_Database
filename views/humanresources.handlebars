
<div class="crud_container">
  <div class = "add">
    <h1 class="site-title" style="font-size: 15px">Add</h1>  
    <input type="text" id="add-firstname" placeholder="Enter First name..."><br><br>
    <input type="text" id="add-lastname" placeholder="Enter Last name..."><br><br>
    <input type="text" id="add-sex" placeholder="Enter Gender..."><br><br>
    <input type="text" id="add-dob" placeholder="Enter Date of Birth..."><br><br>
    <input type="text" id="add-phone" placeholder="Enter Phone Number..."><br><br>
    <input type="text" id="add-address" placeholder="Enter Address..."><br><br>
    <input type="text" id="add-email" placeholder="Enter Email..."><br><br>
    <input type="text" id="add-branch-id" placeholder="Enter Branch_id..."><br><br>
    <a href="#"><button>Add</button></a>
  </div>
  <br>
  <div class = "delete">
    <h1 class="site-title" style="font-size: 15px">Delete by First Name</h1>  
    <input type="text" id="employee-id" placeholder="Enter First Name...">
    <a href="#"><button>Delete</button></a>
  </div>
  <br>
  <div class = "update">
    <h1 class="site-title" style="font-size: 15px">Update Existing Field</h1>
    <input type="text" id="update_data" placeholder="Enter First Name...">
    <a href="https://web.engr.oregonstate.edu/~thaungt/assign1/update.html"><button>Select</button></a>
  </div>
  <br>
  <div class = "search">
    <h1 class="site-title" style="font-size: 15px">Search</h1>  
    <input type="text" id="search-name" placeholder="Search by name...">
    <a href="#"><button>Search</button></a>
  </div>
</div>

<br>

<div>
  <br>
  <table border = 1>
    <tr>
      <th>employee_id</th>
      <th>fst_name</th>
      <th>lst_name</th>
      <th>bid</th>
      <th>cid</th>
    </tr>
    {{#each tableData}}
    <tr>
      <td>{{employee_id}}</td>
      <td>{{fst_name}}</td>
      <td>{{lst_name}}</td>
      <td>{{bid}}</td>
      <td>{{cid}}</td>
    </tr>
    {{/each}}
  </table>
</div>